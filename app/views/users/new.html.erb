<div class='container'>
  <div class='row'>
    <div class='col-xs-4 col-xs-offset-4'>
      <form role='form' action='<%= register_url %>' method='post'>
        <%= authenticity_token %>

        <div class='form-group'>
          <label for='user_email'>Email</label>
          <input id='user_email' name='user[email]' type='text' class='form-control'
          placeholder='you@domain.com'>
        </div>

        <div class='form-group'>
          <label for='user_password'>Password</label>
          <input id='user_password' name='user[password]' type='password' class='form-control'>
        </div>

        <button class='btn btn-default pull-right'>Register</button>
      </form>
    </div>
  </div>
</div>
