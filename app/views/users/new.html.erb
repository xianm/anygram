<div id='splash' class='container'>
  <div class='row vertical-center-row'>
    <div id='splash-content' class='col-xs-4 col-xs-offset-4'>
      <h4 class='text-center'>Register</h4>

      <form role='form' action='<%= register_url %>' method='post'>
        <%= authenticity_token %>

        <div class='form-group'>
          <label for='user_email'>Email</label>
          <input id='user_email' name='user[email]' type='text' class='form-control'
          placeholder='you@domain.com'>
        </div>

        <div class='form-group'>
          <label for='user_password'>Password</label>
          <input id='user_password' name='user[password]' type='password' class='form-control'>
        </div>

        <div class='form-group pull-right'>
          <button class='btn btn-default'>Register</button>
          <span>or <%= link_to 'Sign In', sign_in_url %></span>
        </div>
      </form>
    </div>
  </div>
</div>
